@page 
@model SampleCoreApp.Pages.Restaurant.ListModel
@{
    <h1>Restaurant</h1>


}
<form method="get">
    <div class="form-group">
        <div class="input-group">
            @* asp-for acts as two way data binding *@
            <input type="search" class="form-control" asp-for="SearchTerm" />
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <i class="fa fa-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>
<table class="table">
    @foreach (var res in Model.Restaurants)
    {
    <tr>
        <td>@res.Name</td>
        <td>@res.Location</td>
        <td>@res.Cusine</td>
        <td>
            <a asp-page="./Detail" asp-route-restaurantId="@res.Id">
                <i class="fa fa-search-location">Details</i>
            </a>

        </td>
        <td>
            <a asp-page="./Edit" asp-route-restaurantId="@res.Id">
                <i class="fa fa-edit">Edit</i>
            </a>

        </td>
        <td>
            <a asp-page="./Delete" asp-route-restaurantId="@res.Id">
                <i class="fa fa-trash">Delete</i>
            </a>

        </td>
    </tr>
    }
</table>

<a asp-page="./Edit" class="btn btn-primary">Add New</a><br />
@Model.Message
